@model IEnumerable<WeatherRecordServer.Models.WeatherRecords>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCollection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempOutside)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempIndoor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HumOutside)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HumIndoor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCollection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempOutside)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempIndoor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HumOutside)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HumIndoor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
